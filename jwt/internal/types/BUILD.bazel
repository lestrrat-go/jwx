load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "types",
    srcs = [
        "date.go",
        "string.go",
    ],
    importpath = "github.com/lestrrat-go/jwx/v2/jwt/internal/types",
    visibility = ["//jwt:__subpackages__"],
    deps = ["//internal/json"],
)

go_test(
    name = "types_test",
    srcs = [
        "date_test.go",
        "string_test.go",
    ],
    deps = [
        ":types",
        "//internal/json",
        "//jwt",
        "@com_github_stretchr_testify//assert",
    ],
)

alias(
    name = "go_default_library",
    actual = ":types",
    visibility = ["//jwt:__subpackages__"],
)
